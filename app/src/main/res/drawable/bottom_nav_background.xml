<!-- bottom_nav_background.xml -->
<shape xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:ignore="ExtraText">
    <solid android:color="@android:color/white" /> <!-- Transparent Background color -->
    <stroke
        android:width="2dp"
        android:color="@color/black">
    </stroke>

    <corners android:radius="16dp" /> <!-- Adjust the radius as needed -->
    <padding
        android:left="0dp"
        android:top="0dp"
        android:right="0dp"
        android:bottom="0dp" />
    <size android:height="48dp" /> <!-- Adjust the height as needed -->
</shape>
